extends ../app
block content
  form(action="/pools/new", method="POST")
    div.form-group
      input(type="text", placeholder="Title", class="form-control" name="title")

    div.form-group
      input(type="text", placeholder="Slug Title", class="form-control" name="slug_title")
    
    div.form-group
      input(type="submit", name="Submit", class="btn btn-default")

  script(type="text/javascript").
    function getSlug (value) {
      return value.toLowerCase()
                    .replace(/ /g,'-')
                    .replace(/\-+/g,'-')
                    .replace('ç','c')
                    .replace('ó','o')
                    .replace('í', 'i')
                    .replace('á', 'a');
    }

    function checkSlugEmpty(){
      var slug = $("input[name='slug_title']").val();

      if (slug == "")
      {
        $("input[name='slug_title']").val(getSlug($("input[name='title']").val()));
      }
    }

    $(document).ready(function(){
      $("[name='slug_title']").focus(function(){
        checkSlugEmpty();
      });
    });

